<div id="<%= dom_id pin %>">
  <p>
    <strong>Title:</strong>
    <%= pin.title %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= pin.body %>
  </p>

  <br>

  <%# link_to image_tag(pin.image), pin.image %>
  <%= link_to image_tag(pin.image_as_thumbnail), pin.image if pin.image.attached? && pin.viewable? %>

  <hr>

  <h2>Pictures technique 1</h2>
  <p>When you click on image, the displayed image will be a thumbnail</p>

  <% pin.pictures_as_thumbnails.each do |picture| %>
    <%= link_to image_tag(picture), picture %>
  <% end %>

  <hr>

  <h2>Pictures technique 2</h2>
  <p>When you click on image, the displayed image will be full sized</p>

  <% pin.pictures.each do |picture| %>
    <%= link_to image_tag(pin.picture_as_thumbnail(picture)), picture %>
  <% end %>


</div>
